<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">

        <a class="navbar-brand" href="#">
            <img src="{{section.settings.logo | img_url:'medium'  }}">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mx-auto">
                {% assign navbar = section.settings.main_menu %}
                {% for link in navbar.links %}
                <li class="nav-item">
                  <a class="nav-link" aria-current="page" href="#">{{link.title}}</a>
                </li>
        
              {% endfor %}
            </ul>

              <div class="icons">
                    {% for block in section.blocks %}

                    <a href="#"><img src="{{block.settings.header-icons | img_url:'small' }}"></a>

                    {%endfor%}


                </div>

        </div>

    </div>

</nav>

{% schema %}

{
    "name": "Header",
    "class": "header",
    "tag": "header",
    "settings": [
      {
        "type": "image_picker",
        "label" : "Select Your Logo",
        "id": "logo"
      },
      {
        "type": "link_list",
        "label": "Select Your Main Menu",
        "id": "main_menu",
        "default" : "main-menu"
      }
    ],
    "blocks":[
        {
    "type": "image_picker",
      "name": "Header Icons",
      "settings":  [
    
      {
        "type": "image_picker",
        "label" : "Add Header Icons",
        "id": "header-icons"
      }

      ]
    }
    ]
  }


{% endschema %}